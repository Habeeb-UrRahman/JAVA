import java.util.*;
public class CalculatorQuestion {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter first number (a): ");
        int a = scanner.nextInt();
        System.out.print("Enter second number (b): ");
        int b= scanner.nextInt();
        
        System.out.print("Which operation you want to perform on the numbers ? \n (1 : add, 2 : sub, 3 : mul, 4 : div, 5 : remainder): ");
        int oper = scanner.nextInt();
        switch(oper) {
            case 1 : System.out.println("The sum of the numbers is: "+(a+b));
            break;
            case 2 : System.out.println("The difference of the numbers is: "+(a-b));
            break;
            case 3 : System.out.println("The product of the numbers is: "+(a*b));
            break;
            case 4 : System.out.println("The quotient of the number is: "+(a/b));
            break;
            case 5 : System.out.println("The remainder when the numbers are divided is: "+(a%b));
            break;
            default : System.out.println("Invalid Expression");
        }
        scanner.close();
    }
}
